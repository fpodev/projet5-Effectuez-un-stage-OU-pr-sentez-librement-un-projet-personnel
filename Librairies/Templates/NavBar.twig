<header>
  {% if session is not null %} 
  <div class="nav" id="myTopnav">
    <div class="d-flex justify-content-around">
      <a href="Accueil"><i class="fas fa-home"></i>Accueil</a>
      {% if session.niveau < 1 %}
        <a href="Gestion-Lieux"><i class="fas fa-map-marker-alt "></i>lieux</a>
      {% endif %}
      {% if session.niveau < 2 %}
        <a href="Gestion-Batiments"><i class="fas fa-building "></i> batiments</a>
        <a href="Gestion-Utilisateurs"><i class="fas fa-users-cog "></i> utilisateurs</a>
      {% endif %}
      <a href="Demande-Travaux"><i class="fas fa-tools "></i>demande de travaux</a>  
      <div class="menudown">
        <button class="menubtn"><i class="fas fa-info"></i>Info travaux
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="menudown-content">
          <a href="Liste-nouveaux-Travaux">Nouveaux travaux</a>
          <a href="Liste-travaux-planifiés">Travaux planifiés</a>
          {% if 2 in session.niveau %}
          <a href="Mes-travaux-planifiés">Mes travaux</a>
          {% endif %}
        </div>
      </div>    
      <div id="bienvenue" class="menudown">
        <button class="menubtn"><i class="fas fa-user" ></i>Bienvenue {{ session.prenom }} | site: {{ session.lieu }}
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="menudown-content">
          <a href="Changement-mot-de-passe"><i class="fas fa-key"></i>changer mot de passe</a>
          <a href="Déconnexion"><i class="fas fa-sign-out-alt"></i>Deconexion</a>      
        </div>
      </div>
    
      <a id="burger" class="icon">
        <i class="fa fa-bars"></i>
      </a>
    </div>
  </div>
</header>   
  {% endif %}


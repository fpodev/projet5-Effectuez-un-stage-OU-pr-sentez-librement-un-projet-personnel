{% extends "Head.twig" %}

{% block title %}Liste utilisateurs{% endblock %}

{% block content %} 
 {% include 'NavBar.twig' only %}
<div class="text-center">
    <h1>Voici la liste des {{ title }} </h1>
</div>     
<div class="container">    
    <table class="table table-bordered"> 
        <tr>
            <th>Nom</th>
            <th>Pr√©nom</th>
            <th class="user_responsive">email</th>
            <th>lieu</th>
            <th>niveau</th>
            <th class="user_responsive">Ajouter par:</th>
            <th>Action</th>
        </tr>    
        {% for user in userList  %}
        <tr>
            <td> {{ user.nom }} </td>
            <td> {{ user.prenom }} </td>
            <td class="user_responsive"> {{ user.email }} </td>
            <td> {{ user.lieu }} </td>
            <td> {{ user.niveau }} </td>
            <td class="user_responsive"> {{ user.userAdd }} </td>
            <td>
                <a href='modifier={{ user.id}} '><i class="fas fa-user-edit fa-2x"></a></i> | 
                <a href="supprimer-utilisateur={{ user.id }}"><i class="fas fa-user-slash fa-2x"></a></i>
            </td>
        </tr>
        {% endfor %}
    </table>
    <a href='Ajouter-Utilisateur'><i class="fas fa-user-plus fa-2x"></i></a>
</div>
{% endblock %}    
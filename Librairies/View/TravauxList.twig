{% extends "Head.twig" %}

{% block title %} {{ title|title }} {% endblock %}

{% block content %} 
<div class="container">
<h1>{{ title }}</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Numero</th>
      <th>Description</th>      
      <th>Urgence</th>
      <th>Bâtiment</th>
      <th>Matériel</th>
      <th>Date demande</th> 
      <th>Action</th>          
    </tr>
  </thead>
  <tbody>
  {% for tvx in tvx %}  
    <tr>      
      <td >{{ tvx.id }}</td>      
      <td>{{ tvx.descriptions }}</td>
      <td>{{ tvx.urgence }}</td>
      <td>{{ tvx.nBatiment }}
      <td>{{ tvx.nom }}</td>
      <td>{{ tvx.date_demande|format_datetime(locale='fr') }}</td> 
      <td>  
     
       <a href="voir={{ tvx.id }}"><i class="fas fa-eye fa-2x"></a></i> |
        {% if 0 in session.niveau and planif > 1 %} 
      <a href='planifier-travaux={{ tvx.id }} '><i class="far fa-calendar-alt fa-2x"></a></i> |
      {% endif %}
      {% if 0 in session.niveau or tvx.id_demandeur == session.id_user and planif > 1 %} 
      <a href='edit-travaux={{ tvx.id }} '><i class="far fa-edit fa-2x"></a></i> |
      {% endif %}
      {% if 0 in session.niveau or tvx.id_demandeur == session.id_user %}      
      <a href="supprimer-travaux={{ tvx.id }}"><i class="fas fa-trash-alt fa-2x"></a></i>                  
      {% endif %}            
     
      </td>
    <tr>
   {% endfor %}    
  </tbody>
  </table>
  
{% endblock %}
